@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit role";
}

<h1 class="text-center text-success h1 my-4">Edit @Model.RoleName role</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Id" class="form-label"></label>
                <input asp-for="Id" disabled class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-6 mx-auto">
                    <button type="submit" class="btn btn-primary btn-duo m-2">Update</button>
                    <a asp-action="ListRoles" class="btn btn-secondary btn-duo m-2">Cancel</a>
                </div>
            </div>
            <div class="col-md-10 mx-auto">
                <div class="card bg-primary text-light text-center">
                    <div class="card-header">
                        <h3>Users in this role</h3>
                    </div>
                    <div class="card-body bg-light text-primary">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-success btn-block btn-lg">Add or remove users</a>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>


